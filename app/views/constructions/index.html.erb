<p id="notice"><%= notice %></p>

<h1>Constructions</h1>

<table border=1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Specification</th>
      <th>Number</th>
      <th>Unit</th>
      <th>Unit price</th>
      <th>Amount</th>
      <th colspan="3">ope</th>
    </tr>
  </thead>

  <tbody>
    <% @constructions.each do |construction| %>
      <tr>
        <td><%= construction.name %></td>
        <td><%= construction.specification %></td>
        <td><%= construction.number %></td>
        <td><%= construction.unit %></td>
        <td><%= construction.unit_price %></td>
        <td><%= construction.amount %></td>
        <td><%= link_to 'Show', construction %></td>
        <td><%= link_to 'Edit', edit_construction_path(construction) %></td>
        <td><%= link_to 'Destroy', construction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

